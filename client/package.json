{
  "name": "servertui-client",
  "version": "0.1.0",
  "description": "TUI-based server manager client",
  "type": "module",
  "main": "src/index.tsx",
  "bin": {
    "servertui": "./src/index.tsx"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun",
    "lint": "eslint src/",
    "typecheck": "bun x tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "tui",
    "server",
    "management",
    "agent",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opentui/core": "latest",
    "@opentui/react": "latest",
    "clipboardy": "^5.2.1",
    "react": ">=19.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/react": ">=19.0.0",
    "@types/ws": "^8.5.12",
    "eslint": "^9.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
