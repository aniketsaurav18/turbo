{
  "name": "servertui-client",
  "version": "0.1.0",
  "description": "TUI-based server manager client",
  "type": "module",
  "main": "src/index.tsx",
  "bin": {
    "servertui": "./src/index.tsx"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun",
    "lint": "eslint src/",
    "typecheck": "bun x tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "tui",
    "server",
    "management",
    "ssh",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "node-ssh": "^13.2.0",
    "react": "^18.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/react": "^18.3.28",
    "@types/ws": "^8.5.12",
    "eslint": "^9.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
